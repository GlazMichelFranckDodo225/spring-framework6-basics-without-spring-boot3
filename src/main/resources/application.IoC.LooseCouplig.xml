<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <!-- Implementations of UserDataProvider Interface -->
    <bean
            id="userDatabaseProvider"
            class="com.dgmf.ioc.loosecoupling.interfaces.impl.UserDatabaseProvider"
    />

    <bean
            id="mongoDBDatabaseProvider"
            class="com.dgmf.ioc.loosecoupling.interfaces.impl.MongoDBDatabaseProvider"
    />

    <bean
            id="webServiceDataProvider"
            class="com.dgmf.ioc.loosecoupling.interfaces.impl.WebServiceDataProvider"
    />
    <!-- UserManager Beans -->
    <bean
            id="userManagerWithUserDatabaseProvider"
            class="com.dgmf.ioc.loosecoupling.classes.UserManager"
    >
        <constructor-arg ref="userDatabaseProvider"/>
    </bean>

    <bean
            id="userManagerWithMongoDBDatabaseProvider"
            class="com.dgmf.ioc.loosecoupling.classes.UserManager"
    >
        <constructor-arg ref="mongoDBDatabaseProvider"/>
    </bean>

    <bean
            id="userManagerWithWebServiceDataProvider"
            class="com.dgmf.ioc.loosecoupling.classes.UserManager"
    >
        <constructor-arg ref="webServiceDataProvider"/>
    </bean>
</beans>